<h1>Thrifty Finds Shoppers</h1>
{{!-- READ functionality - Display table for ClothingItems_Orders --}}
<h2>View the Shoppers Table:</h2>
<table id="shoppers-table">
    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{#each data}}
        <tr>
            <td>{{this.shopper_id}}</td>
            <td>{{this.username}}</td>
            <td>{{this.password}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone_number}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}
<h2>Add a new shopper:</h2>
<p>To add a new shopper, please enter the shopper's information below and click 'Submit'!</p>
<form id="add-shopper-form-ajax">
    <label for="input-username">Username: </label>
    <input type="text" name="input-username" id="input-username-ajax">

    <label for="input-password">Password: </label>
    <input type="text" name="input-password" id="input-password-ajax">

    <label for="input-fname">First name: </label>
    <input type="text" name="input-fname" id="input-fname-ajax">

    <label for="input-lname">Last name: </label>
    <input type="text" name="input-lname" id="input-lname-ajax">

    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="input-email-ajax">

    <label for="input-phone">Phone number: </label>
    <input type="text" name="input-phone" id="input-phone-ajax">

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script type="text/javascript" src="./js/add_shopper.js"></script>