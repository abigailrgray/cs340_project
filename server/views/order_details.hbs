<h1>Thrifty Finds Order Details</h1>
{{!-- READ functionality - Display table for ClothingItems_Orders --}}
<h2>View the Order Details Table:</h2>
<table id="order-details-table">
    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>Order Details ID</th>
            <th>Order ID</th>
            <th>Item ID</th>
            <th>Item Quantity</th>
            <th>Sold Price</th>
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{#each data}}
        <tr order-value="{{this.order_id}}" item-value="{{this.item_id}}">
            <td>{{this.order_details_id}}</td>
            <td>{{this.order_id}}</td>
            <td>{{this.item_id}}</td>
            <td>{{this.item_quantity}}</td>
            <td>{{this.sold_price}}</td>
            <td><button onclick="deleteOrderDetails({{this.order_details_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}
<h2>Add a New Order Details Entry:</h2>
<p>To add new order details, please enter the order details below and click 'Submit'!</p>
<form id="add-order-details-form-ajax">
    <label for="input-order-id">Order ID: </label>
    <select name="input-order-id" id="input-order-id-ajax">
        <option value="">&nbsp;</option>
        {{#each orders}}
        <option value="{{this.order_id}}">{{this.order_id}}</option>
        {{/each}}
    </select>

    <label for="input-item-id">Item ID: </label>
    <select name="input-item-id" id="input-item-id-ajax">
        <option value="">&nbsp;</option>
        {{#each items}}
        <option value="{{this.item_id}}">{{this.item_id}}</option>
        {{/each}}
    </select>

    <label for="input-item-quantity">Item quantity: </label>
    <input type="number" name="input-item-quantity" id="input-item-quantity-ajax">

    <label for="input-sold-price">Sold price: </label>
    <input type="number" name="input-sold-price" id="input-sold-price-ajax">

    <input type="submit">
</form>

<h2>Update an Order Details Entry:</h2>
<p>To update an order details entry, select the entry from the drop-down menu.</p>
<form id="update-order-details-form-ajax">
    <label for="input-order-details">Order Details: </label>
    <select name="input-order-details" id="mySelect">
        <option value="">&nbsp;</option>
        {{#each data}}
        <option value="{{this.order_id}}#{{this.item_id}}">{{this.order_details}}</option>
        {{/each}}
    </select>

    <label for="input-item-quantity">Item quantity: </label>
    <input type="number" name="input-item-quantity" id="input-item-quantity-update">

    <label for="input-sold-price">Sold price: </label>
    <input type="number" name="input-sold-price" id="input-sold-price-update">

    <input type="submit">

</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script type="text/javascript" src="./js/add_order_details.js"></script>
<script src="./js/delete_order_details.js"></script>
<script src="./js/update_order_details.js"></script>
